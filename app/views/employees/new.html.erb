<!--ERRORS-->
<% if @employee.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@employee.errors.count, "error") %> prohibited
    this article from being saved:
  </h2>
  <ul>
    <% @employee.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="container col-md-4 col-md-offset-1">
  <h1>New employee</h1>
  <%= form_for @employee do |e| %>
  <!--FIRST NAME-->
  <div class="form-group">
    <%= e.label :first_name %>
    <%= e.text_field :first_name, class: "form-control" %>
  </div>
  <!--FIRST NAME-->
  <div class="form-group">
    <%= e.label :last_name %>
    <%= e.text_field :last_name, class: "form-control" %>
  </div>
  <!--ID CARD-->
  <div class="form-group">
    <%= e.label :id_card %>
    <%= e.number_field :id_card, class: "form-control" %>
  </div>
  <!--EMAIL-->
  <div class="form-group">
    <%= e.label :email %>
    <%= e.text_field :email, class: "form-control" %>
  </div>
  <!--ADDRESS-->
  <div class="form-group">
    <%= e.label :address %>
    <%= e.text_field :address, class: "form-control" %>
  </div>
  <!--phone-->
  <div class="form-group">
    <%= e.label :phone %>
    <%= e.number_field :phone, class: "form-control" %>
  </div>
  <!--SELECT COMPANY-->
  <div class="form-group">
    <%= e.label :company %><br>
    <select name="employee[company_id]" class="selectpicker">
      <%= @companies.each do |c|  %>
      <option value="<%= c.id %>"> <%= c.name %> </option>
      <% end  %>
    </select>
  </div>
  <!--BUTTONS-->
  <%= e.submit "new employee", class:"btn btn-primary" %>
  <% end %> <!--FORM_FOR-->
</div>
<!--IMPORT EMPLOYEES-->
<div class="container col-md-3">
  <h1>Import employees</h1> <br>
  <div class="form-group">
    <%= file_field_tag :file, class: "form-control" %>
    <%= form_tag import_employees_path, multipart: true do %>
  </div>
  <!--Select Company-->
  <div class="form-group">
    <select name="company_id" class="selectpicker">
      <%= @companies.each do |c|  %>
      <option value="<%= c.id %>"> <%= c.name %> </option>
      <% end  %>
    </select>
  </div>
  <%= submit_tag "Import employees file", class:"btn btn-primary" %>
  <% end %>
</div>
