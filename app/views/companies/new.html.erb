<h1>New company</h1>
<% if @company.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@company.errors.count, "error") %> prohibited
    this article from being saved:
  </h2>
  <ul>
    <% @company.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="container col-md-6">
  <%= form_for @company do |c| %>
    <!--NAME-->
    <div class="form-group">
      <%= c.label :name %>
      <%= c.text_field :name, class: "form-control" %>
    </div>
    <!--NIT-->
    <div class="form-group">
      <%= c.label :nit%>
      <%= c.number_field :nit, class: "form-control" %>
    </div>
    <!--ADDRESS-->
    <div class="form-group">
      <%= c.label :address%>
      <%= c.text_field :address, class: "form-control" %>
    </div>
    <!--SELECT USER-->
    <div class="form-group">
      <%= c.label :user %><br>
      <select name="company[user_id]" class="selectpicker">
        <%= @usuarios.each do |u|  %>
        <option value="<%= u.id %>"> <%= u.email %> </option>
        <% end  %>
      </select>
    </div>
    <!--LOGO COMPANY-->
    <div class="form-group">
      <%= c.label :avatar %>
      <%= c.file_field :avatar, class: "form-control" %>
    </div>
    <!--BUTTONS-->
    <%= c.submit "new company", class:"btn btn-primary" %>
  <% end %> <!--FORM_FOR-->
</div>
